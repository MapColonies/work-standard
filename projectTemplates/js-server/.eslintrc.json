{
  "extends": "standard",
  "plugins": [
    "markdown"
  ],
  "overrides": [
    {
      // 2. Enable the Markdown processor for all .md files.
      "files": [
        "**/*.md"
      ],
      "processor": "markdown/markdown"
    }
  ],
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "eol-last": "off",
    "space-before-function-paren": "off",
    "indent": [
      "error",
      4
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi": [
      "error",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ],
    "one-var": [
      "off"
    ],
    "space-before-blocks": [
      "off"
    ],
    "camelcase": [
      "warn"
    ]
  }
}
