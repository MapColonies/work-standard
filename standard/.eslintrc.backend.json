{
  "extends": "standard",
  "plugins": ["import", "node", "promise", "standard"],
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "eol-last": "off",
    "space-before-function-paren": "off",
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi": [
      "error",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ],
    "one-var": [
      "off"
    ],
    "space-before-blocks": [
      "off"
    ],
    "camelcase": [
      "warn"
    ]
  }
}